include $(top_srcdir)/Make.rules
AUTOMAKE_OPTIONS= foreign

INCLUDES   +=
LDADD      += -lutil -lsys -lnet -lhttp_parser -ldispatcher
AM_LDFLAGS  += -fPIC
AM_CXXFLAGS += -fPIC

bindir=$(prefix)/bin
bin_PROGRAMS = hs

hs_SOURCES =

install-data-hook:
	mkdir -p $(prefix)/bin
	mkdir -p $(prefix)/log
	cp http_stress $(prefix)/bin/

uninstall-hook:
	rm -f $(prefix)/bin/hs
