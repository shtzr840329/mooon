SUBDIRS = agent_tester

include $(top_srcdir)/Make.rules
AUTOMAKE_OPTIONS= foreign

INCLUDES   +=
LDADD      += -lutil -lsys -lnet
AM_LDFLAGS  += -fPIC -shared
AM_CXXFLAGS += -fPIC

libdir = $(prefix)/lib
lib_LIBRARIES = libagent.a
libagent_a_SOURCES =

moduledir = $(prefix)/lib
module_PROGRAMS = libagent.so
libagent_so_SOURCES =

install-data-hook:
	mkdir -p $(prefix)/include&&cp -r $(top_srcdir)/../include/agent $(prefix)/include/

uninstall-hook:
	rm -fr $(prefix)/include/agent