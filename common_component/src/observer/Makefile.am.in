include $(top_srcdir)/Make.rules
AUTOMAKE_OPTIONS= foreign

INCLUDES   +=
LDADD      += -lsys
AM_LDFLAGS  += -fPIC -shared -pthread -lrt
AM_CXXFLAGS += -fPIC

noinst_LIBRARIES = libobserver.a
libobserver_a_SOURCES =

moduledir=$(prefix)/lib
module_PROGRAMS = libobserver.so
libobserver_so_SOURCES =

install-data-hook:
	mkdir -p $(prefix)/include&&cp -r $(top_srcdir)/../include/observer $(prefix)/include/

uninstall-hook:
	rm -fr $(prefix)/include/observer
